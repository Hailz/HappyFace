<h1>Results</h1>


<% var searchEntered = false; %>

<% if (productName !== " "){ %>
  <% searchEntered = true; %>
<% } %>

<% if (results.length > 0){ %>
  <% results.forEach(function(result){ %>
    <% if (searchEntered && result.name.includes(productName)){ %>
      <% include ./partials/result.ejs %>
    <% } %>
    <% if (searchEntered == false){ %>
      <% include ./partials/result.ejs %>
    <% } %>
  <% }) %>
<% }else{%>
  <h3>Sorry, no products currently match your search terms.</h3>
<% } %>

