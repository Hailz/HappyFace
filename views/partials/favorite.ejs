<div>
  <a href="<%= product.productLink %>">
    <img src="<%= product.imageLink %>">
    <h3><%= product.name %></h3>
  </a>
  <form method="POST" action="/delete">
    <input hidden type="text" name="id" value="<%= product.id %>">
    <input type="submit" name="submit" value="Delete">
  </form>
</div>    